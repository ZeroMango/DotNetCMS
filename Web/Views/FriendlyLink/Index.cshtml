@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*<script src="~/Scripts/jquery-1.7.1.js"></script>
<script src="~/Scripts/EasyUI/jquery.easyui.min.js"></script>*@
<div>

    <div id="linkToolbar" style="margin-top: 25px; margin-left: 20px">
        <a href="#" class="easyui-linkbutton" data-options="iconCls:'icon-add'" plain="true" onclick="addLink()">新增</a>
        <a href="#" class="easyui-linkbutton" data-options="iconCls:'icon-edit'" plain="true" onclick="editLink()">编辑</a>
        <a href="#" class="easyui-linkbutton" data-options="iconCls:'icon-remove'" plain="true" onclick="deleteLink()">删除</a>
    </div>
    <div id="LinklistData" style="margin-top:10px">

        <table id="linkGrid"></table>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        //friendlyClass.createBtn("addBtn");
        friendlyClass.createDataGrid("linkGrid");
    })
    var friendlyClass = {
        createBtn: function (id) {
            $("#" + id + "").linkbutton({
                iconCls: 'icon-search'
            });
        },
        createDataGrid: function (id) {
            $("#" + id + "").datagrid({
                url: '@Url.Content("~/friendlyLink/getList")',
                border: false,
                pagination: true,
               // toolbar: "#linkToolbar",
                singleSelect: true,
                loadMsg: "正在加载...",
                columns: [[
              { field: 's_LinkName', title: 's_LinkName', width: 100 },
              { field: 's_LinkUrl', title: 's_LinkUrl', width: 100 },
              { field: 's_LinkDesciption', title: 's_LinkDesciption', width: 100, align: 'right' }
                ]]
            });

        }
    }
</script>
